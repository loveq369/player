//控制 播放 进度
void player_set_progress(void *videoPlayer, double progress);

//捕获 某一时间点 图像
void *player_get_captureImage(void *videoPlayer, double timePoint);

//获取当前音量值
int player_get_currentVolume(void *videoPlayer, float *volume);

//控制 音量
void player_set_volume(void *videoPlayer, float volume);


@end














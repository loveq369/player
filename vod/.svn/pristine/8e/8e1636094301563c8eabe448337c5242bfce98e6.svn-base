#import <Foundation/Foundation.h>
#import "TTVideoView.h"
@interface Core : NSObject


//创建player
void *player_create(char *url);

//回调
/**
 *    callback（void *opaque, int result, int type）
 *    result:回调返回值
 *    type: 0，视频创建失败； 1，视频创建成功； 2，进度回调； 3，缓冲回调； 4，视频播放完成
 */
int player_register_callback(void *videoPlayer, void *callback, void *opaque);

//获取视频总时间
int player_get_duration(void *videoPlayer, double *duration);

//---
//播放
void player_play(void *videoPlayer);

//暂停
void player_pause(void *videoPlayer);

//停止
void player_stop(void *videoPlayer);


- (void)tapAction:(UITapGestureRecognizer *)tap
{
    _rightView.alpha = 1;
    _bottomView.alpha = 1;
    //3s后隐藏边栏
    [self performSelector:@selector(hiddenSideView) withObject:nil afterDelay:3];
}

- (void)hiddenSideView
{
    [UIView animateWithDuration:1 animations:^{
        _rightView.alpha = 0;
        _bottomView.alpha = 0;
    } completion:^(BOOL finished) {
        
    }];
}

